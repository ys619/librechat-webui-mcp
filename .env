# .env - Environment Variables for Docker Compose
# DO NOT commit this file to git, add to .gitignore

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=pass123

# MCP Server Configuration
DATABASE_TYPE=mongodb
MONGO_URI=mongodb://admin:pass123@mongo:27017
MONGO_DB=companyDB
PYTHONUNBUFFERED=1

# LibreChat Configuration
MONGO_URI_LIBRECHAT=mongodb://admin:pass123@mongo:27017/librechat?authSource=admin
NODE_ENV=production

# Google Gemini Configuration (Required for Google endpoint)
# Get API key from: https://aistudio.google.com
GOOGLE_KEY=*GOOGLE_API_KEY_HERE*

# Google Models to use (Generative Language API)
GOOGLE_MODELS=gemini-2.0-flash,gemini-1.5-pro,gemini-1.5-flash,gemini-pro,gemini-pro-vision

# Optional: Google Safety Settings
GOOGLE_SAFETY_SEXUALLY_EXPLICIT=BLOCK_ONLY_HIGH
GOOGLE_SAFETY_HATE_SPEECH=BLOCK_ONLY_HIGH
GOOGLE_SAFETY_HARASSMENT=BLOCK_ONLY_HIGH
GOOGLE_SAFETY_DANGEROUS_CONTENT=BLOCK_ONLY_HIGH

# Groq (Optional backup)
GROQ_API_KEY=*GROQ_API_KEY_HERE*

###################################

# JWT Secret (IMPORTANT: Use strong, consistent values - minimum 32 characters)
# NEVER change these after creating user accounts!
JWT_SECRET=*JWT_SECRET*
JWT_REFRESH_SECRET=*JWT_REFRESH_SECRET*

# LibreChat Settings
ALLOW_REGISTRATION=true
ALLOW_GUEST_ACCESS=false
DEFAULT_MODEL=gemini-2.0-flash

# Enable Django API integration
ENABLE_DJANGO_API=true
DJANGO_API_URL=http://django-api:8001/api